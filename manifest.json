{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "version": "1.0",
  "description": "A Chrome extension for recording and sharing videos",
  "permissions": [
    "activeTab",
    "storage",
    "videoCapture",
    "audioCapture",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/logoIcon.png",
      "48": "assets/apple-touch-icon.png",
      "128": "assets/android-chrome-192x192.png"
    }
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/logoIcon.png",
      "48": "assets/apple-touch-icon.png",
      "128": "assets/android-chrome-192x192.png"
    }
  },
  "host_permissions": ["http://localhost:3001/"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
